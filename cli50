#!/usr/bin/env python

import argparse
import distutils.spawn
import os
import subprocess
import sys

def main():

    # check for docker
    if not distutils.spawn.find_executable("docker"):
        sys.exit("Missing dependency. Install `docker`.")

    # parse command-line arguments
    parser = argparse.ArgumentParser(prog="cli50", add_help=False)
    parser.add_argument("-h", "--help", action="store_true")
    parser.add_argument("-u", "--update", action="store_true")
    parser.add_argument("args", nargs="*")
    args = vars(parser.parse_args())

    # usage
    if args["help"]:
        usage()
        sys.exit(0)

    # update image
    if args["update"]:
        subprocess.call(["docker", "pull", "cs50/cli"])

    # mount current working directory in CS50 CLI
    subprocess.call([
        "docker", "run",
            "--hostname", "cli50",
            "--interactive",
            "--name", "cli50",
            "--publish-all",
            "--rm",
            "--tty",
            "--volume", os.getcwd() + ":/root",
            "--workdir", "/root",
            "cs50/cli"
            ])

def usage():
    print("Usage: cli50 [--update] [directory]")

if __name__ == "__main__":
    main()
